	<%- include('./partials/header.ejs') %>
	
	<main id="car">
		<div class="container my-5">
			<div class="space"></div>
			<div class="row">
				<h2 class="mb-4">Add new Car</h2>
				<form action="/cars/<%= car._id %>" method="post">
					<div class="mb-3">
						<label for="carName" class="form-label">Car Name</label>
						<input type="text" class="form-control" name="name" placeholder="Enter car name" value="<%= car.name %>" required>
					</div>
					<div class="mb-3">
						<label for="carDescription" class="form-label">Description</label>
						<textarea class="form-control" name="description" rows="3" placeholder="Enter car description" required><%= car.description %></textarea>
					</div>
					<div class="mb-3">
						<label for="carBrand" class="form-label">Brand</label>
						<select name="brand" class="form-select">
							<option value="<%= car.brand %>" selected>Choose brand</option>
							<option value="BMW">BMW</option>
							<option value="Toyota">Toyota</option>
							<option value="Mercedes">Mercedes</option>
							<option value="Audi">Audi</option>
							<option value="Porshe">Porsche</option>
							<option value="Lexus">Lexus</option>
							<option value="Ferrari">Ferrari</option>
							<option value="Tesla">Tesla</option>
						</select>
					</div>
					<div class="mb-3">
						<label for="carType" class="form-label">Type of car</label>
						<select name="type" class="form-select">
							<option value="<%= car.type %>" selected>Choose type of car</option>
							<option value="Sedan">Sedan</option>
							<option value="Luxury">Luxury</option>
							<option value="Sport Car">Sport Car</option>
							<option value="Coupe">Coupe</option>
							<option value="Pickup Truck">Pickup Truck</option>
							<option value="Wagon">Wagon</option>
						</select>
					</div>
					<div class="mb-3">
						<label for="carPrice" class="form-label" >Price</label>
						<input type="number" class="form-control" name="price" placeholder="Enter car price" value="<%= car.price %>" required>
					</div>
					<div class="d-flex mb-3">
						<div class="me-5">
							<label for="carImage" class="form-label">Image 1</label>
							<input type="text" class="form-control" value="<%= car.img1 %>" name="img1">
						</div>
						<div class="me-5">
							<label for="carImage" class="form-label">Image 2</label>
							<input type="text" class="form-control" value="<%= car.img2 %>" name="img2">
						</div>
						<div>
							<label for="carImage" class="form-label">Image 3</label>
							<input type="text" class="form-control" value="<%= car.img3 %>" name="img3">
						</div>
					</div>
					<button type="submit" class="btn btn-primary">Update car</button>
				</form>
			</div>
		</div>
		
	</main>
	
	<!-- JavaScript -->
	<script src="/js/bootstrap.bundle.min.js"></script>
	<script src="/js/jquery-3.7.1.min.js"></script>

	<%- include('./partials/footer.ejs')%>
</body>
</html>